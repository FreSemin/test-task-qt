{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@user": [
        "src/user"
      ],
      "@user/*": [
        "src/user/*"
      ],
      "@post": [
        "src/post"
      ],
      "@post/*": [
        "src/post/*"
      ],
      "@database": [
        "src/database"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@auth": [
        "src/auth"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@redis": [
        "src/redis"
      ],
      "@redis/*": [
        "src/redis/*"
      ],
      "@common": [
        "libs/common/src"
      ],
      "@common/*": [
        "libs/common/src/*"
      ]
    }
  }
}